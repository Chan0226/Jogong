<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bit.data.dao.WishlistDao">
	<select id="selectAllWishlist" parameterType="int" resultType="wishlistDto">
		select * from wishList where userNum=${userNum} and publicOption=1;
	</select>
	
	<!-- 상세페이지 위시리스트 -->
	<insert id="insertWishlist" parameterType="wishlistDto">
		insert into wishlist values (null,#{publicOption},#{userNum},#{productNum})
	</insert>
</mapper>  